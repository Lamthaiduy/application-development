@model application_development.ViewModel.CourseCategory

<h2>Create Course</h2>

@using (Html.BeginForm("CreateCourse", "Staff", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CourseName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Course.CourseName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CourseDescription, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Course.CourseDescription, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.CategoryId, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.Course.CategoryId, new SelectList(Model.Categories, "Id", "CategoryName"), new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Course.CategoryId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back", "AllCourses", "Staff", null, new { @class = "btn btn-default" })
            <input type="submit" class="btn btn-default" value="Create New Course" />
        </div>
    </div>
}