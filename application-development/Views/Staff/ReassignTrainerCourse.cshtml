@model application_development.ViewModel.AssignTrainerCourse

<h2>Reassign Trainer Course</h2>

@using (Html.BeginForm("ReassignTrainerCourse", "Staff", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.TrainerCourse.Trainer.TrainerName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DisplayFor(m => m.TrainerCourse.Trainer.TrainerName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CourseId, new { @class = "col-md-2 control-label" })
        @Html.DropDownListFor(m => m.CourseId, new SelectList(Model.Courses, "Id", "CourseName", Model.TrainerCourse.Course), new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.TrainerCourse.Id)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back", "AllTraineeCourse", "Staff", new { Id = ViewBag.TrainerId }, new { @class = "btn btn-default" })
            <input type="submit" class="btn btn-default" value="Reassign" />
        </div>
    </div>
}

